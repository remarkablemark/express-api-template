{
  "name": "express-api-template",
  "version": "1.0.0-alpha",
  "description": "Express API template.",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "build/bin/www.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "dev": "DEBUG=express-api-template:* nodemon src/bin/www.ts",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "yarn lint --fix",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "husky install",
    "release": "standard-version --no-verify",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "test": "jest --watch",
    "test:ci": "CI=true jest --coverage --colors"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0",
    "pm2": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "^16.6.1",
    "yarn": "^1.22.10"
  },
  "private": true,
  "license": "MIT"
}
