{
  "name": "express-api-template",
  "version": "1.0.0-alpha",
  "description": "Express API template.",
  "author": "Mark <mark@remarkablemark.org>",
  "main": "build/bin/www.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "dev": "DEBUG=express-api-template:* nodemon src/bin/www.ts",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "lint:fix": "yarn lint --fix",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "husky install",
    "release": "standard-version --no-verify",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "test": "jest --watch",
    "test:ci": "CI=true jest --coverage --colors"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/compression": "^1.7.3",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/debug": "^4.1.9",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.6.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "18",
    "yarn": "^1.22.10"
  },
  "private": true,
  "license": "MIT"
}
